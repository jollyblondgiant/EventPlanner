<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Activity</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
     @using Microsoft.AspNetCore.Http;
     @{
        int? UserID = @Context.Session.GetInt32("ID");
        string UserName = @Context.Session.GetString("UserName");
        string Where = @Context.Session.GetString("Page");
        if(UserID == null && Where ==null)
        {
            <h1>Welcome to The Dojo Activity Center!</h1>
        }
        if(UserID != null && Where == "Home")
        {
            <p id="Banner"><span>Dojo Activity Center</span>  <span>Welcome, @UserName!</span> <a href = "/logout">Log out</a> </p>
        
        }
        if(UserID != null && Where != "Home")
        {
            <p id="Banner"><span>Dojo Activity Center</span>  <a href="/home">Home</a> <a href = "/logout">Log out</a> </p>
        }
     }
    
    

     

    



    <div class="container body-content">
        @RenderBody()
    </div>
        
        
        <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
